{
  "name": "@waymarks/root",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "bunx ultracite fix --unsafe && bun run format:md",
    "format:md": "bunx markdownlint-cli2 --fix \"**/*.md\" \"!**/.bun/**\"",
    "format:staged": "bun scripts/format-staged.ts",
    "format:prettier": "bunx prettier --write .",
    "lint": "turbo run lint && bun run lint:md",
    "lint:biome": "bunx ultracite check",
    "lint:md": "bunx markdownlint-cli2 \"**/*.md\" \"!**/.bun/**\"",
    "lint:skill-coverage": "bun scripts/lint-skill-coverage.ts",
    "check": "bun run lint",
    "check:doc": "bun scripts/typedoc-check.ts",
    "check:spec": "bun scripts/check-spec-alignment.ts && bun run lint:skill-coverage && bun run check:doc",
    "check:all": "bun run lint && bun run typecheck && bun run test && bun run check:spec",
    "waymark:map": "bun scripts/waymark-map.ts",
    "audit": "bun scripts/waymark-audit.ts",
    "install:bin": "cd packages/cli && bun run install:bin",
    "uninstall:bin": "cd packages/cli && bun run uninstall:bin",
    "ci:local": "turbo run ci:local && bun run check:spec",
    "ci:validate": "turbo run ci:validate && bun run check:spec",
    "dev:core": "turbo run dev --filter=@waymarks/core",
    "dev:cli": "turbo run dev --filter=@waymarks/cli",
    "build:core": "turbo run build --filter=@waymarks/core",
    "build:cli": "turbo run build --filter=@waymarks/cli",
    "prepare": "lefthook install",
    "test:cli": "./.claude/scripts/run-tests.sh --all",
    "test:cli:parse": "./.claude/scripts/run-tests.sh parse",
    "test:cli:scan": "./.claude/scripts/run-tests.sh scan",
    "clean:test": "rm -rf .scratch/testing"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "^1.2.22",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "lefthook": "^1.13.4",
    "markdownlint-cli2": "^0.18.1",
    "pino": "9.13.0",
    "pino-pretty": "13.1.1",
    "prettier": "^3.6.2",
    "typedoc": "^0.28.15",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2",
    "ultracite": "^5.4.5",
    "yaml": "2.8.1"
  },
  "version": "1.0.0-beta.1"
}
