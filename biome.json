{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "globals": ["Bun"]
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "linter": {
    "rules": {
      "style": {
        "noMagicNumbers": "warn",
        "noNestedTernary": "warn"
      }
    }
  },
  "overrides": [
    {
      "includes": ["packages/cli/src/commands/doctor.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "useAwait": "off"
          },
          "complexity": {
            "noExcessiveCognitiveComplexity": "off"
          }
        }
      }
    }
  ]
}
