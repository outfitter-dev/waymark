{
  "name": "@waymarks/mcp",
  "version": "0.0.0",
  "type": "module",
  "bin": {
    "waymark-mcp": "dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun build src/index.ts --outdir dist --target bun --watch",
    "test": "bun test || echo 'No tests yet'",
    "typecheck": "tsc --noEmit",
    "lint": "bunx ultracite check",
    "check:waymarks": "echo 'Waymarks check will be implemented in v1.0'"
  },
  "dependencies": {
    "@waymarks/cli": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "1.2.22"
  }
}
