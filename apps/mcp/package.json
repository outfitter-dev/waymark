{
  "name": "@waymarks/mcp",
  "version": "1.0.0-beta.1",
  "type": "module",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "types": "dist/index.d.ts",
  "bin": {
    "waymark-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:types && bun build src/index.ts --outdir dist --target bun",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "bun build src/index.ts --outdir dist --target bun --watch",
    "test": "bun test || echo 'No tests yet'",
    "typecheck": "tsc --noEmit",
    "lint": "bunx ultracite check",
    "check:waymarks": "echo 'Waymarks check will be implemented in v1.0'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@waymarks/core": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "1.2.22"
  }
}
